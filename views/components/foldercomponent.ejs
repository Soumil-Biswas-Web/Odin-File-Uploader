<div class="folder">
    <div>
        <img src="/assets/folder.svg" alt="folder">
        <a href="/files/folder/<%= folder.id %>">
            <%= folder.name %>
        </a>
    </div>
    <div>
        <button onclick="showDialog('delete-folder-dialog', '<%=folder.id%>')"><img src="/assets/trash-can.svg" alt="delete_icon"></button>
        <button onclick="showDialog('share-folder-dialog', '<%=folder.id%>')"><img src="/assets/share-variant.svg" alt="share"></button>
        <button onclick='showDialog("info-folder-dialog", <%= JSON.stringify(folder) %>)'><img src="/assets/information-slab-circle-outline.svg" alt="info"></button>
    </div>
</div>